.signup-form
  %h2= t('.sign_up')
  = simple_form_for @user, url: '/signup', html: { data: { turbo: false } } do |f|
    .flex
      = f.input :first_name
      = f.input :last_name
    = f.input :middle_name
    = f.input :email
    = f.input :password
    = f.input :password_confirmation, required: true
    = f.input :date_of_birth
    .privacy-and-terms= t('.privacy_message_html', privacy_link: '#', term_link: '#')
    = f.submit
  .additional-link
    = t('.have_an_account')
    = link_to t('.sign_in'), signin_path
